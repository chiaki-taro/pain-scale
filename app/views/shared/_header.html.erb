<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='header-left'>
    <%= link_to "Pain Record", "/" %>
  </div>
  <div class='header-right'>
    <% if user_signed_in? %>
      <div><%= link_to current_user.user_name, patients_path, class: "user-nickname" %></div>
      <div><%= link_to 'ログアウト', destroy_user_session_path, data: {turbo_method: :delete}, class: "logout" %></div>
    <% else %>
      <div><%= link_to 'ログイン', new_user_session_path, class: "login" %></div>
      <div><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></div>
    <% end %>
  </div>
</header>