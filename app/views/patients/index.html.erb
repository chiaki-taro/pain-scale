<%= render "shared/header" %>
<h1>
<%= current_user.user_name%>さんの患者一覧
</h1>
<% @patients.each do |patient| %>
  <ul class="patients-list">
    <li class='list'>
      <%= link_to patient_path(patient) do %>
      <div class='patient-info'>
        <h3 class='patient-name-button'>
          <%= patient.patient_name %>
        </h3>
      </div>
      <% end %>
    </li>
  </ul>
<% end %>
<%= link_to "患者さん登録", new_patient_path, class: "add-patient-button" %>